extends ../includes/_layout

block content
  - var isFooterBorder = true;
  include ../includes/_header

  block main
    main.center
      .p-contacts
        .container
          .breadcrumbs
            ul.breadcrumbs__list.flex.jc-fs.fw-w.ai-s
              li
                a.nuxt-link-active(href='/') ART MARKS
              li
                | Контакты
          .p-services__top
            .caption.caption--big.caption--services--visible
              .caption__inner.above-viewport(data-in-viewport='i16')
                p.caption__main Контакты
                //
                //
        .p-contacts__top
          .container
            .contacts__block.contacts__block--top.in-viewport(data-in-viewport='i17')
              p.contacts__block-title СВЯЖИТЕСЬ С НАМИ
              .footer__item.contacts__block-item
                p.footer__info-title телефоны:
                .phones__list.contacts__phones
                  a(href='tel: (096) 600-47-56') (096) 600-47-56
                  a(href='tel: (099) 517-60-86') (099) 517-60-86
                  a(href='tel: (063) 944-54-90') (063) 944-54-90
              .footer__item.contacts__block-item
                p.footer__info-title email:
                a.footer__info-value(href='mailto:info@art-marks.net') info@art-marks.net
              .footer__item.contacts__block-item
                p.footer__info-title skype:
                a.footer__info-value(href='skype:artmarks.ua?chat') artmarks.ua
          .p-contacts__top-bg(style='background-image: url("/img/contacts-top.jpg");')
        .p-contacts__bottom
          .container
            .p-contacts__bottom-inner.flex.ai-s.jc-sb
              .p-contacts__bottom-left.flex.fd-c.ai-fs.jc-c
                .p-contacts__bottom-left-inner
                  form.form.p-contacts__form
                    .caption.caption--smallest.p-contacts__bottom-caption.caption--services--visible
                      .caption__inner.above-viewport(data-in-viewport='i18')
                        p.caption__main
                          | ОСТАЛИСЬ ВОПРОСЫ?
                          br
                          |  МЫ С РАДОСТЬЮ ВАМ ПОМОЖЕМ
                        //
                        //
                    .form__inner.flex.ai-s.jc-sb
                      .form__inner-part
                        .form-input
                          .form-input__inner
                            //
                            input(placeholder='Имя', required='required', name='username', type='text')
                            i.form-input__line
                            //
                          span.form-message
                        .form-input
                          .form-input__inner
                            //
                            input(placeholder='Телефон', required='required', name='userphone', type='tel')
                            i.form-input__line
                            //
                          span.form-message
                        .form-input
                          .form-input__inner
                            //
                            input(placeholder='E-mail', required='required', name='useremail', type='email')
                            i.form-input__line
                            //
                          span.form-message
                      .form__inner-part.flex.fd-c.jc-sb.ai-fs
                        .form-input.form-input--textarea
                          .form-input__inner
                            //
                            textarea(rows='1', placeholder='Вопрос', required='required', name='usertext')
                            i.form-input__line
                            //
                          span.form-message
                        .form-input.form-input--file
                          .form-input__inner
                            //
                            label.flex.ai-fe.jc-fs(for='header-modal-file')
                              input#header-modal-file(type='file', placeholder='Добавить файл', name='userfile', multiple='multiple')
                              svg(version='1.1', xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', x='0px', y='0px', viewBox='0 0 20 22', xml:space='preserve')
                                path(d='M15.8,0c2.2,0,3.9,1.8,3.9,3.9c0,0.4-0.1,1.7-1.2,2.8l-8.5,8.5c-0.6,0.7-2.1,1.3-3.3,0.1c-1.2-1.2-0.6-2.7,0.1-3.3l4.4-4.4 L12,8.3l-3.2,3.2l0,0l-1.4,1.4l0,0c-1,1.2,0.6,2.9,2,1.6l8.4-8.4c0.7-0.7,0.9-1.4,0.9-2.2c0-1.6-1.3-2.9-2.9-2.9 c-0.8,0-1.5,0.3-2,0.8l0,0C13.2,2.4,2.3,13.3,2.3,13.4l0,0C1.5,14.2,1,15.3,1,16.5C1,19,3,21,5.5,21c0.6,0,1.8,0,3.5-1.7L19.3,9.1 L20,9.8L9.5,20.2c-1,1.1-2.4,1.8-4,1.8c-3,0-5.5-2.5-5.5-5.5c0-1.6,0.7-3,1.7-4C12.4,1.8,12.6,1.7,13,1.2C13.3,0.9,14.2,0,15.8,0')
                              span Добавить файл
                            //
                            //
                          span.form-message
                    .btn__wrap
                      //
                      button.btn.btn--filled.p-contacts__bottom-form-btn(type='submit')
                        .btn__wrap-inner
                          span.btn__wrap-text
                            | отправить
                          //
              .p-contacts__bottom-right
                .contacts__block.contacts__block--bottom.in-viewport(data-in-viewport='i19')
                  p.contacts__block-title НАШ АДРЕС
                  .footer__item.contacts__block-item
                    p.footer__info-title(style='display: none;')
                    p.footer__info-value г. Харьков, ул. Кузнечная, 9
                  .footer__item.contacts__block-item
                    p.footer__info-title график работы:
                    p.footer__info-value Пн-Пт: 09:00-18:00
                    p.footer__info-value Сб-Вс: выходные
                #contacts-map.contacts-map



  include ../includes/_footer
  
